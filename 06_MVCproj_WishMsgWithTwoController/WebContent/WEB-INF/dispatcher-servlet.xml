<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">

	<!-- handller cfg -->
	<bean
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<props>
				<prop key="home.htm">ufvc</prop>
				<prop key="wish.htm">wmsg</prop>
				<prop key="aboutus.htm">ufvc</prop>
				<prop key="contactus.htm">ufvc</prop>
			</props>
		</property>
	</bean>

	<!-- Controller cfg -->


	<bean id="wmsg" class="com.nt.controller.DisplayWishMsgController">
	<constructor-arg ref="wishservice"/>
	</bean>
	<!-- <bean id="ufvc"
		class="org.springframework.web.servlet.mvc.UrlFilenameViewController" />
 -->
 
 <!-- Service -->
 <bean id="wishservice" class="com.nt.service.WishSericeImpl"/>
<bean id="ufvc"
		class="org.springframework.web.servlet.mvc.ParameterizableViewController" />
	<!-- ViewResolver configuration -->
	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="WEB-INF/pages/" />
		<property name="suffix" value=".jsp" />
	</bean>
</beans>
